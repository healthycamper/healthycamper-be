// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Diagnosis {
  TYPE1
  TYPE2
}

enum Relation {
  Mom
  Dad
  Doctor
}

enum Report {
  GLUCOSE
  CARBS
  INSULIN
}

type Medication {
  name String
  dosage Int
  dosageUnits String
}

type Contact {
  name String
  relation String
  phoneNumber String
  email String
}

model Camper {
  id    String   @id @default(auto()) @map("_id") @db.ObjectId
  name  String
  age   Int
  diagnosis Diagnosis
  gender String
  parent Contact
  doctor Contact
  medication Medication[]
}

model Counselor {
  id    String  @id @default(auto()) @map("_id") @db.ObjectId
  name  String
  email String
  phone String
}

model Events {
  id    String  @id @default(auto()) @map("_id") @db.ObjectId
  camperId  String
  counselorId   String
  quantity  Float
  type Report
}